<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E84AD8"
    android:orientation="vertical">

    <!--    <androidx.cardview.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="20dp"-->
    <!--        android:layout_marginEnd="20dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        app:cardCornerRadius="10dp">-->
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#e3badb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_add_group"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="0dp"
            android:background="#eb2fc8"
            android:text="ADD GROUP BOOKWRITER  "
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="#e3badb"
            android:text="  GROUP DETAILS"
            android:textColor="#0C1C75"
            android:textSize="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:background="#DA9FE4"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/group_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Group ID"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="left"
                android:text="GROUP ID"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Group Name"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="left"
                android:text="GROUP NAME"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/date_created"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Date Created"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="left"
                android:text="DATE CREATED"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/cycle_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Cycle Number"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="CYCLE NUMBER"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/first_training_meeting_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="First Training Meeting Date"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="DATE OF FIRST TRAINING MEETING"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/date_savings_started"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Date Savings Started"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="DATE SAVINGS STARTED"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/reinvested_savings_cycle_start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Re-invested Savings At Start Of Cycle"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="RE-INVESTED SAVINGS AT START OF CYCLE"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/registered_members_cycle_start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Registered Members at Start of Cycle"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="REGISTERED MEMBERS AT START OF CYCLE"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/interest_rate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Interest Rate"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="GROUP'S INTEREST RATE"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/group_management_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:hint="Group Management"
                    android:paddingStart="10dp"
                    android:text=""
                    android:textColorHint="@color/grey" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:gravity="bottom|left"
                android:text="GROUP MANAGEMENT"
                android:textAllCaps="true"
                android:textColor="#08155A"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <!--    </androidx.cardview.widget.CardView>-->
</LinearLayout>