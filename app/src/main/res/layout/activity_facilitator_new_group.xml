<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linlay_inputs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icons"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a New Group"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Fill in the following details below"
                android:textSize="14sp"
                android:textColor="@color/fab_tint"
                android:fontFamily="sans-serif"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/fab_tint"
                android:fontFamily="sans-serif"/>

            <EditText
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="30dp"
                android:textSize="13sp"
                android:hint="Name of Group"
                android:inputType="text"
                android:drawablePadding="16dp"/>

            <EditText
                android:id="@+id/interest_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="30dp"
                android:textSize="13sp"
                android:hint="Interest Rate"
                android:inputType="text"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Cycle Number"
                android:inputType="number"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Date of first training meeting"
                android:inputType="date"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Date savings started"
                android:inputType="date"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Savings re-invested at the start of current cycle"
                android:inputType="text"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Group Management"
                android:inputType="text"
                android:drawablePadding="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:hint="Number of registered members at the start of the cycle"
                android:inputType="text"
                android:drawablePadding="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:minHeight="60dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp">

                <TextView
                    android:id="@+id/save_group_details"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Save Group"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>